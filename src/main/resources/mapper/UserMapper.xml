<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">
    <resultMap id="userResultMap" type="com.example.demo.domain.UserInfo">
        <constructor>
            <idArg  column="id" javaType="int"></idArg>
        </constructor>
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
    </resultMap>
    <insert id="insertUser"  parameterType="com.example.demo.domain.UserInfo">
        INSERT  INTO userinfo (id,name,password,email) value (#{id},#{name},#{password},#{email})
    </insert>
    <select id="queryInfo" parameterType="java.lang.String" resultType="com.example.demo.domain.UserInfo">
        select id,name,password,email from userinfo where name = #{name}
    </select>
    <select id="queryInfoById" resultType="com.example.demo.domain.UserInfo">
        select * from userinfo where  id=#{id};
    </select>
</mapper>